<%- include('partials/header') %>

<h1>Create New Post</h1>

<!-- in a case the user forgets to enter a title/content, we want to show an error message -->
<% if(error) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

<!-- creating a create pos form -->
<form action="/create" method="POST" class = "mb-3">
  <div class = "mb-3">
    <label for = "title" class = "form-label">Title</label>
    <input type="text" name="title" placeholder="Post title" id = "title" class= "form-control" required>
  </div>

  <div class ="mb-3">
    <label for = "content" class = "form-label">Content</label>
    <textarea id = "content" name="content" placeholder="Post content" class = "form-control" rows = "5" required></textarea>
  </div>

  <button type="submit" class = "btn btn-primary">Create</button>
  <a href="/" class="btn btn-secondary">Cancel</a>
</form>

<script src="/js/scripts.js"></script>

<%- include('partials/footer') %>